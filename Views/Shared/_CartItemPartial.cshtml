@model IEnumerable<Ecommerce.ViewModels.CartItem>
@{
    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">
                <div class="d-flex align-items-center">
                    <img src="~/img/Product/@item.Hinh" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;"
                        alt="">
                </div>
            </th>
            <td>
                <p class="mb-0 mt-4">@item.TenHH</p>
            </td>
            <td>
                <p class="mb-0 mt-4">@item.DonGia</p>
            </td>
            <td>
                <div class="input-group quantity mt-4" style="width: 100px;">
                    <div class="input-group-btn">
                        <button class="decrease-quantity btn btn-sm btn-minus rounded-circle bg-light border"
                            data-id="@item.MaHh">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                    <input type="text" class="form-control form-control-sm text-center border-0" name="quantity"
                        id="quantity_@item.MaHh" value="@item.SoLuong">
                    <div class="input-group-btn">
                        <button class="btn btn-sm btn-plus rounded-circle bg-light border increase-quantity"
                            data-id="@item.MaHh">
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>
                </div>
            </td>
            <td>
                <p id="totalPrice_@item.MaHh" class="mb-0 mt-4">@item.ThanhTien</p>
            </td>
            <td>
                <a asp-controller="Cart" asp-action="remove" asp-route-id_product="@item.MaHh" class="btn btn-md rounded-circle bg-light border mt-4">
                    <i class="fa fa-times text-danger"></i>
                </a>
            </td>

        </tr>
    }
}
